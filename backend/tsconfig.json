{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types", "src/types"],
    "lib": ["es2018"],
    "paths": {
      "/src/*": ["./*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx"]
}
